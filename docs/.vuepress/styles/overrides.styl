html
  // Hide things
  .site-name.can-hide,
  .nav-links.can-hide
    display none

  // Sidebar
  .sidebar
    padding 10px
    display flex
    flex-direction columns
    overflow hidden

    > .sidebar-links
      width 100%
      overflow auto
  
  a.sidebar-link.active,
  .sidebar-heading.clickable.active
    border-left-color transparent

  a.sidebar-link.active + ul .sidebar-link.active
    background none
    color $color
    font-weight 700
    outline: -webkit-focus-ring-color auto 1px
    outline-color: $link
    outline-style: dotted
    outline-width: 1px

  .sidebar-heading.clickable
    background none
    
  .sidebar-heading.clickable.active,
  .sidebar-heading.clickable:hover,
  .sidebar-heading.clickable:active
    font-weight normal
    color $color

  .sidebar > .sidebar-links > li > a.sidebar-link,
  .sidebar-heading
    font-weight normal
    font-size 1em
    
  .sidebar-links.sidebar-group-items
    overflow visible

  a.sidebar-link,
  .sidebar-heading,
  .sidebar-group a.sidebar-link
    padding-left .5em

  .sidebar > .sidebar-links > li:not(:first-child)
    margin-top 0

  // Navbar
  .navbar, .sidebar,
  .navbar .links
    background $panelBg
  .navbar .site-name
    color $link

  .search-box input
    background-position 7px 7px
    color $color
    font-size 1em
    padding-left 2em

  // Suggestions
  .suggestions
    border-radius 0

  // Buttons
  button
    color $color
    padding 1em

    &:hover, &:active
      background inherit

    &:not(:disabled):active
      padding 1em

  // Code areas
  div[class*="language-"],
  .theme-default-content pre, .theme-default-content pre[class*="language-"]
    border-radius 0

  .theme-default-content code
    color $color
    background-color darken($panelBg, 10%)

  // Message blocks
  .custom-block.warning
    background-color rgba(255,229,100,0.7)

  // Blockquotes
  blockquote
    background #dfdfdf
    padding-top 2em
    padding-bottom 2em

  // Tables
  tr:nth-child(2n)
    background darken($panelBg, 8%)
    
  // Content
  .page-edit .edit-link a
    color $link

  .page-edit .last-updated .prefix
    color $color
  .page-edit .last-updated .time
    color $color
    opacity 0.75

  .icon.outbound
    color $link
    opacity 0.45