/**
 * Theme Overrides
 */
html
  .sidebar .sidebar-sub-headers
    padding-left 2em

  table
    display table
    table-layout fixed
    width 100%

  // Fixes issue where home link pagers shows up as just "/" instead of "🏠 Home"
  .prev[href='/']
    color transparent
    &:after
      color $link
      content '🏠 Home'
      position relative
      left -.85em

/**
 * @TODO Organize the following better
 */
.handsfree-feedback
  background #444
 
.handsfree-debugger
  width 300px
  margin auto
  margin-top 40px

[class^='flex']
  display flex

.flex-row
  flex-direction row

.verticle-middle-children
  & > *
    vertical-align middle

.space-children
  & > *
    display inline-block
    margin-right 10px

img
  max-width 100%

hr
  margin 0
  border none
  width 400px
  height 1px
  opacity 0.5
  background linear-gradient(
    to right,
    red 20%,
    yellow 20%,
    yellow 36%,
    green 36%,
    green 60%,
    blue 60%,
    blue 100%
  )